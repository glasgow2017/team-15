<div class="container">
    <div class="main row">
        <div class="jumbotron jumbotron-fluid">
            <h1 class="search-header"> Contact us </h1>
            <div id="searchResult"></div>
            <div class="description contact-description">
                <form>
                    <div class="form-group">
                        <div class="row input-height">
                            <div class="col-lg-4">
                                <label>Full Name</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="email" class="form-control" placeholder="Enter name">
                            </div>
                        </div>
                        <div class="row input-height">
                            <div class="col-lg-4">
                                <label>Email address</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="email" class="form-control" placeholder="name@example.com">
                            </div>
                        </div>
                        <div class="row input-height">
                            <div class="col-lg-4">
                                <label class="message">Please enter your message</label>
                            </div>
                            <div class="col-lg-8">
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
                <button type="button" value="Submit" class="btn  btn-info btn-lg btn-block">Submit</button>
            </div>
        </div>
    </div>
</div>